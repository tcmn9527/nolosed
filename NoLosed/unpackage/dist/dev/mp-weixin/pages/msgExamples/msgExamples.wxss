
::-webkit-scrollbar {
	  width: 0;
	  height: 0;
	  color: transparent;
}
.content {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: left;
}
.item {
		width: calc(100% - 60rpx);
		margin-top: 20rpx;
		margin-left: 20rpx;
		margin-right: 20rpx;
		border: 1rpx solid #c6c6c6;
		border-radius: 10rpx;
		display: flex;
		flex-direction: column;
		justify-content: center;
}
.titleView {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		padding-top: 10rpx;
}
.titleText {
		font-size: 28rpx;
		color: #000;
		margin-left: 10rpx;
}
.rightBtn {
		border: 1rpx solid #0f80ff;
		border-radius: 30rpx;
		background-color: #0f80ff;
		font-size: 25rpx;
		color: #fff;
		padding: 0rpx 20rpx;
		line-height: 40rpx;
		height: 45rpx;
		margin-right: 10rpx;
}
.rightBtn:hover {
		background-color: #0c68cf;
}
.rightBtn:active {
		background-color: #0c68cf;
}
.line {
		width: 100%;
		height: 2rpx;
		background-color: #dedede;
		margin-top: 10rpx;
}
.editView {
		width: calc(100% - 20rpx);
		margin: 10rpx;
		font-size: 28rpx;
		color: #000;
		align-self: center;
}
